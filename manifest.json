{
  "manifest_version": 3,
  "name": "Pants",
  "version": "0.1.1",
  "author": "valkyrie_pilot",
  "description": "Redirect YouTube shorts to YouTube videos",
  "icons": {
    "48": "icons/pants-48.png",
    "96": "icons/pants-96.png"
  },
  "homepage_url": "https://github.com/randomairborne/pants",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["pants.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pantsaddon@valk.sh",
      "strict_min_version": "67.0"
    }
  }
}
